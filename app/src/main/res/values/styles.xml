<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomEditTextView" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/logo_blue</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#85BAFF</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="switch_theme">
        <item name="thumbTint">@color/colorPrimary</item>
        <item name="trackTint">@color/textColorSecondary</item>
    </style>

</resources>
